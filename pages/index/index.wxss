@import "../template/personOperate.wxss";
/**index.wxss**/
.container {
	font-size: 32rpx;
	position: relative;
	width: 100%;
	box-sizing: border-box;
}

.com-fix {
	width: 100%;
	height: 200rpx;
	position: fixed;
	z-index: 1;

}

.back-btn {
	width: 100%;
	height: 100rpx;
	padding: 20rpx;
	/* padding: 10rpx; */
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	box-sizing: border-box;
	background-color: #fff;
}

.back-btn .btn {
	margin: 0;
	height: 60rpx;
	line-height: 60rpx;
	border: 0;
	background-color: #f0f0f0;
	border-radius: 0;
	outline: none;
	font-size: 32rpx;
}

.nav-hea {
	width: 100%;
	height: 100rpx;
	padding: 10rpx 20rpx;
	box-sizing: border-box;
	background-color: #f0f0f0;
	color: #bbb;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	position: relative;
}

.nav-right {
	color: #169bd5;
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	align-items: center;
	width: 70%;
	height: 80rpx;
}

.search-wrapper {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	position: relative;
	height: 100%;
	width: 65%;
	box-sizing: border-box;
}

.search-wrapper input {
	width: 100%;
	border: 1rpx solid #000;
	background-color: #fff;
	color: #000;
	padding: 0 90rpx 0 10rpx;
	border-radius: 40rpx;
	/* display: none; */
}

.place-style {
	font-size: 28rpx;
}

.search-wrapper .search {
	position: absolute;
	right: 0;
	top: 0;
	/* vertical-align: middle; */
	z-index: 100;
	/* z-index: 1; */
	
}
.nav-right text {
	width: 100rpx;
	font-size: 32rpx;
	letter-spacing: 1rpx;
	height: 100%;
	line-height: 80rpx;
	text-align: center;
	/* width: 16%; */
}

.conditions-screen {
	/* width: 200rpx; */
	width: 40%;
	position: absolute;
	top: 80rpx;
	right: 0;
	/* height: 320rpx; */
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	z-index: 100;
	background-color: #fff;
	border-left: 1rpx solid #bbb;
	box-sizing: border-box;
}

.conditions-screen text {
	width: 100%;
	padding: 20rpx;
	color: #000;
	border-bottom: 1rpx solid #bbb;
}

.page-body {
	width: 100%;
	margin-top: 200rpx;

}

.company-list {
	width: 100%;
	height: 200rpx;
	padding: 20rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: flex-start;	
	background-color: #fff;
	margin-bottom: 20rpx;
}

.list-top {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
	box-sizing: border-box;
}
.company-name {
	width: 80%;
	font-size: 36rpx;
}
.operate {
	width: 20%;
	font-size: 28rpx;
	color: #bbb;
	display: flex;
	justify-content: space-between;
	align-items: flex-end;
	padding-top: 5rpx;
}

.list-bottom {
	width: 100%;
}

.list-bottom text {
	border: 1rpx solid #bbb;
	border-radius: 20rpx;
	color: #bbb;
	padding: 0 15rpx;
	line-height: 50rpx;
	font-size: 28rpx;
	margin-right: 10rpx;
}

.list-bottom .active {
	color: #169bd5;
	border: 1rpx solid #169bd5;
}